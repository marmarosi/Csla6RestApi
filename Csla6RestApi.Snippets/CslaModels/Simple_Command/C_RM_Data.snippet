    {
        public long? $RootModel$Key { get; set; }

        public $CommandModel$Dao(
            long? $RootParam$Key,
            string $RootParam$Name
            )
        {
            $RootModel$Key = $RootParam$Key;
            $RootModel$Name = $RootParam$Name;
        }
    }

    /// <summary>
    /// Defines the data transfer object of the $CommandName$ command.
    /// </summary>
