			<Description>Implements a read-only child collection.</Description>
			<Shortcut>c6cl-cc</Shortcut>
        </Header>
        <Snippet>
            <Code Language="CSharp">
                <![CDATA[/// <summary>
    /// Represents a read-only $ChildName$ info collection.
    /// </summary>
    [Serializable]
    public class $ChildModel$Infos : ReadOnlyList<$ChildModel$Infos, $ChildModel$Info>
    {
        #region Business Rules

        //private static void AddObjectAuthorizationRules()
        //{
        //    // Add authorization rules.
        //    BusinessRules.AddRule(
        //        typeof($ChildModel$Infos),
        //        new IsInRole(
        //            AuthorizationActions.GetObject,
        //            "Manager"
        //            )
        //        );
        //}

        #endregion

        #region Data Access

        [FetchChild]
        private void Fetch(
            List<$ChildModel$InfoDao> list,
            [Inject] IChildDataPortal<$ChildModel$Info> itemPortal
            )
        {
            // Load values from persistent storage.
            foreach (var item in list)
                Items.Add(itemPortal.FetchChild(item));
        }

        #endregion
    }]]>
            </Code>
            <Declarations>
				<Literal>
					<ID>ChildModel</ID>
